  <div class="search-container">
    <h2 class="search-title">Procure por um tópico</h2>
    {{search submit=false instant=settings.instant_search class='search search-full' placeholder="Ex: Cancelar Pedido"}}
  </div>

  <h2 class="frequently-asked">Dúvidas Frequentes</h2>

  <div class="help-center-container">
    <div class="sidebar">
      <p class="choose-option-text">Escolha uma opção abaixo:</p>
      <ul id="sections-list">
        {{#each categories}}
        {{#each this.sections}}
        <li class="section-item"
            data-section-id="{{this.id}}">
          <span>{{this.name}}</span>
        </li>
        {{/each}}
        {{/each}}
      </ul>
    </div>

    <div class="articles-container">
      <div id="articles-list"></div>
      <div id="article-content"></div>
    </div>
  </div>
</section>


<section class="help-center">
  <div class="breadcrumb">
    <a href="/"
       class="breadcrumb-link">Início</a>
    <div class="breadcrumb-separator"></div>
    <span class="breadcrumb-current">Central de Ajuda</span>
  </div>
  <div class="section-title-container">
    <h2 class="help-center-title">Como podemos te ajudar?</h2>
    <h3 class="help-center-subtitle">Veja abaixo algumas opções: </h3>
  </div>
  <div class="quick-selector">
    {{#if settings.show_quick_links_1}}
    <a class="selector-container"
       href={{settings.quick_link_1}}>
      <div class="icon-container">
        <img src={{settings.quick_link_icon_1}} alt="">
      </div>
      <p class="selector-text">{{settings.quick_link_text_1}}</p>
    </a>
    {{/if}}
    {{#if settings.show_quick_links_2}}
    <a class="selector-container"
      href={{settings.quick_link_2}}>
      <div class="icon-container">
       <img src={{settings.quick_link_icon_2}} alt="">
      </div>
      <p class="selector-text">{{settings.quick_link_text_2}}</p>
    </a>
    {{/if}}
    {{#if settings.show_quick_links_3}}
    <a class="selector-container"
      href={{settings.quick_link_3}}>
      <div class="icon-container">
       <img src={{settings.quick_link_icon_3}} alt="">
      </div>
      <p class="selector-text">{{settings.quick_link_text_3}}</p>
    </a>
    {{/if}}
    {{#if settings.show_quick_links_4}}
    <a class="selector-container"
      href={{settings.quick_link_4}}>
      <div class="icon-container">
       <img src={{settings.quick_link_icon_4}} alt="">
      </div>
      <p class="selector-text">{{settings.quick_link_text_4}}</p>
    </a>
    {{/if}}
    {{#if settings.show_quick_links_5}}
    <a class="selector-container"
      href={{settings.quick_link_5}}>
      <div class="icon-container">
